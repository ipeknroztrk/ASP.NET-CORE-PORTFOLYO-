@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/Layout/Index.cshtml";
}

@{
    // Farklı renkler
    var progressBarColors = new List<string> {  "bg-success", "bg-danger", "bg-warning",  "bg-green","bg-info"  };
}




<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yetenekler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        @foreach (var item in Model)
                        {
                            // Rastgele bir renk seçimi için indeks belirle
                            var random = new Random();
                            var randomIndex = random.Next(progressBarColors.Count);
                            var progressBarColor = progressBarColors[randomIndex];

                            <div class="progress-card">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">@item.Title</span>
                                    <span class="text-muted fw-bold">@item.Value</span>
                                </div>
                                <div class="progress mb-6" style="height: 15px;">
                                    <div class="progress-bar @progressBarColor" role="progressbar" style="width: @(item.Value)%;" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="@item.Value"></div>
                                </div>
                                
                                <div class="d-flex justify-content-between">
                                    <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-light">Güncelle </a>
                                    <a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-light">Sil </a>
                                </div>
                            </div>
                            
                        }
                        <br />
                        <!-- En altta buton -->
                        <td><a href="/Skill/AddSkill/" class="btn btn-primary">Yeni Yetenek Girişi </a></td>
                    </div>
                </div>
            </div>
