
@model List<ToDoList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacaklar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar ile ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz.
                        </div>
                        <div class="card-body">
                            <div class="table-full-width">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <div class="form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input  select-all-checkbox" type="checkbox" data-select="checkbox" data-target=".task-select">
                                                        <span class="form-check-sign"></span>
                                                    </label>
                                                </div>
                                            </th>
                                            <th>İçerik</th>
                                            <th>Tarih</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                                                            <input class="form-check-input task-select" type="checkbox" @(item.Status ? "checked" : "") onchange="window.location.href='/ToDoList/ChangeToDoListStatusTo' + (this.checked ? 'True' : 'False') + '/@item.ToDoListId'">
                                                            <span class="form-check-sign"></span>
                                                        </label>
                                                    </div>
                                                </td>
                                                <td>@item.Title</td>
                                                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                                <td class="td-actions text-right">
                                                    <div class="form-button-action">
                                                        <button type="button" onclick="window.location.href='/ToDoList/UpdateToDoList/@item.ToDoListId'" data-toggle="tooltip" title="Güncelle" class="btn btn-link btn-simple-primary">
                                                            <i class="la la-edit" style="font-size: 18px;"></i>
                                                        </button>
                                                        <button type="button" onclick="window.location.href='/ToDoList/DeleteToDoList/@item.ToDoListId'" data-toggle="tooltip" title="Sil" class="btn btn-link btn-simple-danger">
                                                            <i class="la la-times" style="font-size: 18px;"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-right">
                                <a href="/ToDoList/CreateToDoList" class="btn btn-link btn-simple-primary btn-lg">
                                    <span>Ekle</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
