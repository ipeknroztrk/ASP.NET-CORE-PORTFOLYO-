@model List<MyPortfolıoUdemy.DAL.Entities.Portfolıo>

<section id="works" class="s-works target-section">

    <!-- Başlık ve Açıklama -->
    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
           
            <h3>Son Projelerime Göz Atabilirsiniz.</h3>
            <p class="lead">Merhabalar, aşağıda öğrendiğim teknolojilerle geliştirdiğim projelerim yer almaktadır.</p>
        </div>
    </div>

    <!-- Projeler -->
    <div class="row masonry-wrap">
        <div class="masonry">
            @foreach (var item in Model)
            {
                <div class="masonry__brick" style="margin-left:70px; margin-top:15px;">
                    <div class="item-folio">

                        <!-- Resim -->
                        <div class="item-folio__thumb">
                            <a href="@item.ImagrUrl" class="thumb-link" data-size="1050x700">
                                <img src="@item.ImagrUrl" alt="@item.Title">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <!-- Proje Bilgisi -->
                        <div class="item-folio__text">
                            <h3 class="item-folio__title">@item.Title</h3>
                            <p class="item-folio__cat">@item.SubTtitle</p>
                        </div>

                        <!-- GitHub Linki (Güncellenmiş) -->
                        <a href="@item.Url"
                           target="_blank"
                           class="github-link"
                           onclick="event.stopPropagation()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                            </svg>
                        </a>

                        <!-- Açıklama -->
                        <div class="item-folio__caption">
                            <p>@item.Description</p>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>

</section>

<style>
    /* GitHub Linki için Yeni Stil */
    .github-link {
        position: absolute;
        right: 15px;
        bottom: 15px;
        z-index: 10;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.9);
        border-radius: 50%;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }

        .github-link:hover {
            background: #fff;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        .github-link svg {
            width: 20px;
            height: 20px;
            color: #333;
        }

    /* Lightbox için */
    .item-folio__thumb a:not(.github-link) {
        cursor: zoom-in;
    }
</style>