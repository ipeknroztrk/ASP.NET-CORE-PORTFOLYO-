@model MyPortfolıoUdemy.DAL.Entities.Contact

<section id="contact" class="s-contact target-section" style="background: #111111; position: relative;">

    <div class="overlay" style="background: rgba(0,0,0,0.5);"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İletişim</h3>
            <h1>@Model.Title</h1>
            <p class="lead">@Model.Description</p>
        </div>
    </div>
    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form name="contactForm" id="contactForm" method="post" action="">
                <fieldset>

                    <div class="form-field">
                        <input name="contactName" type="text" id="contactName" placeholder="İsim" value="" minlength="2" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="contactEmail" type="email" id="contactEmail" placeholder="Email" value="" required="" aria-required="true" class="full-width">
                    </div>
                    <div class="form-field">
                        <input name="contactSubject" type="text" id="contactSubject" placeholder="Konu" value="" class="full-width">
                    </div>
                    <div class="form-field">
                        <textarea name="contactMessage" id="contactMessage" placeholder="Mesaj" rows="10" cols="30" required="" aria-required="true" class="full-width"></textarea>
                    </div>
                    <div class="form-field">
                        <button class="full-width btn--primary">Gönder</button>
                        <div class="submit-loader">
                            <div class="text-loader">Sending...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>

            <!-- contact-warning -->
            <div class="message-warning">
                Something went wrong. Please try again.
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Your message was sent, thank you!<br>
            </div>

        </div>
        <div class="col-four tab-full contact__infos">
            <h4 class="h06">Telefon</h4>
            <p>
                 @Model.Phone1<br>
                 @Model.Phone2<br>
                
            </p>

            <h4 class="h06">Email</h4>
            <p>
                @Model.Email1<br>
                @Model.Email2
            </p>

            <h4 class="h06">Adres</h4>
            <p>
               @Model.Address
            </p>
        </div>

    </div>

</section> <!-- end s-contact -->
<style>
    /* Orijinal stiller */
    .s-contact {
        background: #111111 !important;
        padding-top: 12rem;
        padding-bottom: 12rem;
    }

    .contact__form {
        background: rgba(255,255,255,0.08);
        padding: 4rem;
        border-radius: 5px;
    }

    /* Mobil uyum */
    @@media (max-width: 800px) {
        .contact__form

    {
        padding: 3rem !important;
    }

    }
</style>