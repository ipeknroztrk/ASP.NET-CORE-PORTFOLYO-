@model List<Feature>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alanı</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan </div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne Çıkan alanı ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>

                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FeatureId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        

                                        <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>

                                    </tr>

                                }

                            </tbody>
                        </table>
                        <td><a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Öne Çıkan Alanı Girişi</a></td>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


